# Jobly Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME=Jobly
APP_VERSION=0.1.0
DEBUG=false

# Database
DATABASE_URL=sqlite:///./jobly.db

# LLM APIs (at least one required for AI features)
# Get Anthropic API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Get OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Gmail API (optional - for email monitoring)
# Follow setup guide in IMPLEMENTATION_GUIDE.md
GMAIL_CREDENTIALS_PATH=/path/to/gmail/credentials.json

# SMTP Settings (optional - for sending emails)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
# For Gmail, use App Password: https://support.google.com/accounts/answer/185833
SMTP_PASSWORD=your_gmail_app_password

# LinkedIn API (optional - requires partner access)
# Apply at: https://business.linkedin.com/talent-solutions
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# Rate Limiting
RATE_LIMIT_CALLS=10
RATE_LIMIT_WINDOW=60.0

# Agent Configuration
MAX_AGENT_RETRIES=3
AGENT_TIMEOUT=300

# Storage Paths
DATA_DIR=./data
PROFILE_DIR=./data/profiles
JOB_DIR=./data/jobs
DOCUMENT_DIR=./data/documents
